{% extends "layout.njk" %}

{% block content %}

  <div id="episodes" class="list" data-action="episodes:paginate->pagination#update episodes:heading->heading#update pagination:paginate->episodes#paginate" data-controller="episodes heading pagination search" data-episodes-items-value="12" data-episodes-search-value="true" data-episodes-filters-value="true">
    <div class="container-fluid">

      <div class="row header">
        <div class="col-12 col-md-9">
          {% include "partial/list/_heading.njk" %}
        </div>
        <div class="col-12 col-md-3 mb-3 mb-md-0">
          {% include "partial/list/_search.njk" %}
        </div>
      </div>
      {% include "partial/list/_pagination.njk" %}

      <div class="row episodes" data-episodes-target="items"></div>
    </div>
  </div>

{% endblock %}