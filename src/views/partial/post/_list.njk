{% extends "partial/list/_layout.njk" %}

{% block count %}
<div data-count="{{ data.list.count }}" data-posts-target="count"></div>
{% endblock %}

{% block content %}
  <div class="col-12 card post mb-4">
    <div class="card-body p-0">
      {# <h2 class="card-title" data-blog-target="title"></h2> #}

      <div data-posts-target="content" class="content">{{ item.content | safe }}</div>
    </div>

    <p>{{ item.published_at }}</p>

    <ul class="tags ps-0">
      {% for tag in item.tags %}
        <li>
          <button class="me-2 badge">{{ tag }}</button>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
