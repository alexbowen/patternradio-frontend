{% extends "partial/carousel/_layout.njk" %}

{% block count %}
<div data-count="{{ data.list.count }}" data-episodes-target="count"></div>
{% endblock %}

{% block content %}
<div class="playable episode mb-3 carousel-item{% if loop.first %} active{% endif %}" data-bs-interval="4000" data-url="https://www.mixcloud.com/widget/iframe/?hide_cover=1&autoplay=1&feed={{ item.key }}">
  <div class="row g-0 p-0">
    <div class="col-12 col-sm-6 content">
      <div class="image-container w-100" data-action="click->radio#play">
        <img src="{{ item.pictures.large }}" alt="{{ item.name }}" class="w-100" />

        <div class="playable-button">
          <span class="button">
            <button></button>
          </span>
        </div>
      </div>
    </div>

    <div class="col-12 col-sm-6 py-0 py-sm-4 px-sm-0 content">
      
      {% set title = showData(item.name).title %}
      {% if item.user.username === 'patternradio' %}

        <h5 class="card-title">
          <a data-controller="navigation" data-action="click->navigation#navigate" href="/episode/{{ item.slug }}" class="nav-link mb-1 fs-3">{{ showData(item.name).detail }}</a>
        </h5>

        <h5 class="card-title mb-2">
          {{showData(item.name).host}}
        </h5>

        <p class="card-text mb-1">
          <a data-controller="navigation" data-action="click->navigation#navigate" href="/show/{{ showTitleId(title | trim) }}" class="nav-link fs-6">{{ showData(item.name).title }}</a>
        </p>

      {% else %}
        <h5 class="card-title fs-3">{{ title }}</h5>
        <p class="card-text">{{item.user.name}}</p>
      {% endif %}

      <ul class="tags ps-0" data-action="click->episodes#tagSearch">
        {% for tag in item.tags %}
          <li>
            <button class="me-2 badge">{{ tag.name }}</button>
          </li>
        {% endfor %}
      </ul>

    </div>
  </div>
</div>
{% endblock %}
